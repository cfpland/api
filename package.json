{
  "name": "cfpland",
  "version": "0.0.1",
  "description": "",
  "author": "Karl Hughes <karl@cfpland.com>",
  "license": "MIT",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "collect-conferences": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/collect-conferences.js",
    "enhance-conferences": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/enhance-conferences.js",
    "add-locations-to-conferences": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/add-locations-to-conferences.js",
    "send-saved-conferences-notifications": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/send-saved-conferences-notifications.js",
    "send-saved-search-notifications": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/send-saved-search-notifications.js",
    "send-user-summary": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/send-user-summary.js",
    "send-weekly-subscriber-newsletter": "rm -rf dist/ && tsc -p tsconfig.build.json && node dist/cli/commands/send-weekly-subscriber-newsletter.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles"
  },
  "dependencies": {
    "@nestjs/common": "^6.4.0",
    "@nestjs/core": "^6.4.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.4.0",
    "@nestjs/typeorm": "^6.1.2",
    "@sendgrid/mail": "^6.4.0",
    "airtable": "^0.5.10",
    "cache-manager": "^2.9.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "handlebars": "^4.1.2",
    "handlebars-helpers": "^0.10.0",
    "html-minifier": "^3.5.21",
    "mailchimp-api-v3": "^1.13.0",
    "md5": "^2.2.1",
    "mjml": "^4.4.0-beta.2",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.11.0",
    "query-string": "^6.8.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rss-parser": "^3.7.2",
    "rss-to-email": "^0.9.0",
    "rxjs": "^6.5.2",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.4.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.14.11",
    "@types/node-fetch": "^2.3.7",
    "@types/supertest": "^2.0.8",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "js-yaml": "^3.13.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
